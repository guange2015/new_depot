<div class="page-header">
<h1>登陆认证</h1>
</div>

<div class="mycontent">
<% if flash[:error] %>
      <p class="error high"><%= flash[:error] %></p>
    <% end %>
<br/>    
<%= form_tag('/logins') do -%>
<div class="clearfix">  
<%= label_tag "密码：" %>  
<div class="input"><%= password_field_tag :password %>  </div>
</div>

<div class="clearfix">  
<%= submit_tag '确认',:class=>"input btn" %>
</div>
<% end -%>
</div>