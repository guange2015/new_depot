<div class="page-header">
<h1>入出库单</h1>
<%= link_to "新入库单", new_data_form_path(:type=>"in") %>|<%= link_to "新出库单", new_data_form_path(:type=>"out") %>
</div>

<div class="mycontent">
<table class="zebra-striped1">
<thead>
	<tr>	
	<th>单位</th>
	<th>类型</th>
	<th>状态</th>
	<th>日期</th>
	<th>操作</th>
	</tr>
</thead>
<tbody>
	<% @data_forms.each do |f| %>
	<tr>		
		<td><%= link_to f.comment, f %></td>
		<td><%= f.get_type %></td>
		<td><%= f.get_state %></td>
		<td><%= format_date(f.created_at) %></td>
		<td><%= link_delete f,!f.finished? %></td>
	</tr>
	<% end %>
</tbody>
</table>

<%= will_paginate @data_forms, :renderer =>'MyLinkRenderer'%>
</div>
