<div class="page-header">
<h1>新入库</h1>
</div>

<div class="mycontent">
<%= form_for(@firework) do |f| %>
  <% if @firework.errors.any? %>
    <div class="alert-message block-message error">
      <h2><%= "有#{@firework.errors.count}个错误" %> :</h2>

      <ul>
      <% @firework.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="clearfix">
    <%= f.label "名称" %>
    <div class="input"><%= f.text_field :name %></div>
  </div>
  <div class="clearfix">
    <%= f.label "规格" %>
    <div class="input"><%= f.text_field :spec,:class=>"small" %></div>
  </div>
  <div class="clearfix">
    <%= f.label "库存" %>
    <div class="input"><%= f.text_field :lastdata,:class=>"mini" %></div>
  </div>
  <div class="clearfix">
    <%= f.submit '提交' ,:class=>"input btn "%>
  </div>
<% end %>

</div>
