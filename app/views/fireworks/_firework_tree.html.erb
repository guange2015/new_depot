<div class="category_list">
  <!-- Small button group -->
    <% categories.each do |cate| %>
    <div class="btn-group">
      <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">
        <%= cate[:root].name %> <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" role="menu">
        <% cate[:cs].each do |cs| %> 
        <li>
          <%= link_to cs.name, fireworks_path(root: cs.id),remote: true %>
        </li>
        <% end %>
      </ul>
    </div>
    <% end %>
</div>
